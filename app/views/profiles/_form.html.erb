<%= form_with(model: profile, url: user_profiles_path(current_user), local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %><br />
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :first_name %><br />
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %><br />
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :date_of_birth %><br />
    <%= form.date_field :date_of_birth %>
  </div>

  <div class="field">
    <%= form.label :gender %><br />
    <%= form.select :gender, options_for_select(['Male', 'Female']) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
